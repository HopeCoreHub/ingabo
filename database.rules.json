{
  "rules": {
    ".read": true,
    ".write": true,
    "posts": {
      ".indexOn": ["createdAt", "authorId"]
    },
    "replies": {
      ".indexOn": ["postId", "createdAt"]
    },
    "content_reports": {
      ".indexOn": ["contentId", "reportedBy", "status", "reportedAt"]
    },
    "users": {
      "$uid": {
        "reports": {
          ".indexOn": ["reportedAt", "status"]
        }
      }
    }
  }
} 